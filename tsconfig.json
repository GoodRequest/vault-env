{
  "compilerOptions": {
    "lib": ["es2021"],
    "module": "CommonJS",
    "outDir": "./bin",
    "target": "es2021",
    "esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "typeRoots": ["./scripts/types", "node_modules/@types"]
  },
  "ts-node": {
		"esm": true
  },
  "include": ["./scripts/**/*"],
  "exclude": ["node_modules", "bin"]
}
